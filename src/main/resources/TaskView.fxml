<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <root>
      <AnchorPane prefHeight="350.0" prefWidth="260.0" style="-fx-background-color: #12171b;">
         <children>
            <BorderPane layoutX="5.0" layoutY="5.0" prefHeight="340.0" prefWidth="250.0">
               <top>
                  <HBox alignment="CENTER" prefHeight="54.0" prefWidth="320.0" BorderPane.alignment="CENTER">
                     <children>
                        <TextField fx:id="name" alignment="CENTER" prefHeight="46.0" prefWidth="234.0" promptText="NAME" style=": #12171b;">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
               </top>
               <center>
                  <VBox alignment="TOP_CENTER" prefHeight="224.0" prefWidth="250.0" spacing="10.0" BorderPane.alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER" prefHeight="18.0" prefWidth="290.0">
                           <children>
                              <Label text="Description:    " textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <TextField fx:id="description" prefWidth="250.0" promptText="DESCRIPTION">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </TextField>
                        <HBox alignment="CENTER" prefHeight="37.0" prefWidth="250.0">
                           <children>
                              <Label prefHeight="18.0" prefWidth="31.0" text="Day: " textFill="WHITE" />
                              <ChoiceBox fx:id="day" prefWidth="150.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="18.0" prefWidth="290.0">
                           <children>
                              <Label text="Category:   " textFill="WHITE" />
                              <TextField fx:id="category" prefHeight="23.0" prefWidth="103.0" promptText="CATEGORY">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </TextField>
                           </children>
                        </HBox>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" prefHeight="18.0" prefWidth="290.0">
                                 <children>
                                    <Label prefHeight="18.0" prefWidth="118.0" text="New Category: " textFill="WHITE" />
                                    <TextField fx:id="newCategory" prefHeight="28.0" prefWidth="79.0" style="-fx-border-color: BLACk;" />
                                    <ColorPicker fx:id="color" prefHeight="25.0" prefWidth="43.0" />
                                 </children>
                              </HBox>
                              <HBox fx:id="selectCategory" alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="320.0">
                                 <children>
                                    <Label prefHeight="18.0" prefWidth="118.0" text="Exisiting Category: " textFill="WHITE" />
                                    <ChoiceBox fx:id="categoryDropdown" prefHeight="26.0" prefWidth="77.0" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="40.0" prefWidth="250.0">
                                 <children>
                                    <CheckBox fx:id="completed" alignment="CENTER" mnemonicParsing="false" text="Completed" textFill="WHITE" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="250.0">
                           <children>
                              <Button fx:id="delete" alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: #f05030;" text="Delete">
                                 <HBox.margin>
                                    <Insets right="2.5" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="save" mnemonicParsing="false" style="-fx-background-color: #1ee321;" text="Save">
                                 <HBox.margin>
                                    <Insets left="2.5" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </center>
            </BorderPane>
         </children>
      </AnchorPane>
   </root>
</Scene>
